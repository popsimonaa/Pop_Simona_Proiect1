@page
@model Pop_Simona_Proiect1.Pages.Consultatii.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editare</h1>

<h4>Consultatie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Consultatie.ID" />
            <div class="form-group">
                <label asp-for="Consultatie.TipConsultatie" class="control-label"></label>
                <input asp-for="Consultatie.TipConsultatie" class="form-control" />
                <span asp-validation-for="Consultatie.TipConsultatie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Inapoi la lista principala de consultatii</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
