@page
@model Pop_Simona_Proiect1.Pages.Spitale.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Spitale</h1>

<p>
    <a asp-page="Create">Adauga un nou spital</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Spital[0].NumeSpital)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Spital) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeSpital)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
